<div class="container">
    <div class="form-card">
        <h1 class="center">Sign Up for CraftPlanner</h1>
        <h3>Create an account</h3>
        
        <%= form_for @user do |f| %>
        <%=     f.label :name %><br>
        <%=     f.text_field :name %><br>
        <%=     f.label :password %><br>
        <%=     f.text_field :password %><br>
        <%=     f.label :password_confirmation %><br>
        <%=     f.text_field :password_confirmation %><br>
        <%=     f.submit 'Sign up' %>
        <% end %>

        <h3>Or use your Twitter account</h3>
        <%= link_to "Sign up with Twitter", "/auth/twitter" %>
    </div>
</div>