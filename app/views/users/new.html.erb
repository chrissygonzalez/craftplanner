<div class="container">
    <div class="form-card mt-50">
        <h1 class="mb-50">Sign Up for CraftPlanner</h1>
        <%= render partial: "layouts/errors", locals: {object: @user} %>

        <h3>Create an account</h3>
        <%= form_for @user do |f| %>
        <%=     f.label :name, class: "label" %>
        <%=     f.text_field :name %>
        <%=     f.label :password, class: "label" %>
        <%=     f.password_field :password %>
        <%=     f.label :password_confirmation, class: "label" %>
        <%=     f.password_field :password_confirmation %>
        <br>
        <%=     f.submit 'Sign up' %>
        <% end %>

        <h3 class="bordered">Or use your Twitter account</h3>
        <%= link_to "Sign up with Twitter", "/auth/twitter", class: "button display-inline-block" %>
    </div>
</div>