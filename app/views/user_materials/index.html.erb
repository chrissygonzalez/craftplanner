<div class="container">
    <div class="table-card mt-50">
        <div class="display-flex">
            <h1 class="">My Supply Stash</h1>
            <%= link_to "Add to my stash", new_user_user_material_path, class: "button self-center ml-20" %>
        </div>

        <table class="shadow">
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
            <% @user_materials.each do |um| %>
            <tr>
                <td class="stash-row row"><%= um.material.name %></td>
                <td class="stash-row row"><%= um.quantity %></td>
                <td>

                <%= form_for um, :url => user_user_material_path(@user.id, um.id), method: "delete" do |f| %>
                    <%=     f.submit "Remove from stash" %>
                <% end %>
                </td>
            </tr>
            <% end %>
        </table>
    </div>
</div>