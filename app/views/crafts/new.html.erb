<h1>New Craft</h1>

<% if @craft.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@craft.errors.count, "error") %> prohibited this craft from being saved:</h2>
 
    <ul>
    <% @craft.errors.messages.each do |msg| %>
      <li><%= msg[1][0] %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @craft do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Description" %>
  <%= f.text_area :description %><br>
  <%= f.label "Method" %>
  <%= f.text_field :method %><br>
  <%= f.label "Source" %>
  <%= f.text_field :source %><br>

  <h3>Materials</h3><br>
  
  <%= f.fields_for :craft_materials do |c| %>
    <%=  c.label "Choose a material" %>
    <%=  c.select :material_id, Material.all.collect {|m| [m.name, m.id] }, include_blank: true %><br>
    <%=  c.label "Quantity" %>
    <%=  c.text_field :quantity %><br>
  <% end %>
  
<br>  <%= f.submit %>  
<% end %>
<br>
