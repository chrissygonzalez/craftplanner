<h1>New Craft</h1>

<%= render partial: "layouts/errors", locals: {object: @craft} %>

<%= form_for @craft do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Description" %>
  <%= f.text_area :description %><br>
  <%= f.label "Method" %>
  <%= f.text_field :method %><br>
  <%= f.label "Source" %>
  <%= f.text_field :source %><br>

  <h3>Materials</h3><br>
  <%= f.fields_for :craft_materials do |cm| %>
    <%= cm.label "Name:" %>
    <%= cm.select :material_id, Material.all.collect {|m| [m.name, m.id] }, include_blank: true %><br>
    
      <%= cm.fields_for :material do |mat| %>
        <p>Or add a new material
        <%= mat.label "Name:" %>
        <%= mat.text_field :name %></p>
      <% end %>
    
    <%=  cm.label "Quantity" %>
    <%=  cm.text_field :quantity %><br>
  <% end %>
  
  <br>  
  <%= f.submit %>  
<% end %>

